@model ProductViewModel


<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Product Name</label>
        <input type="text" asp-for="Pname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Category</label>
        <select asp-for="Pcat" class="form-control">
            <option>Electronics</option>
            <option>Cloths</option>
            <option>Others</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Price</label>
        <input type="text" asp-for="Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Image</label>
        <input type="file" asp-for="Picture" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
