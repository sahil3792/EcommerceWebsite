@model User

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Username</label>
        <input type="text" asp-for="Username" class="form-control" id="exampleInputPassword1" placeholder="Username">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <a asp-controller="Account" asp-action="SignIn">Signin</a>

</form>